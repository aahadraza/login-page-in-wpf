<Window x:Class="login_page.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login_page"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Border  Background="#2e3137" CornerRadius="20" Margin="20">
            <StackPanel Margin="20">
                <Label Content="LOGIN PAGE" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
                <Separator></Separator>
                <Label Content="USERNAME" Foreground="White"></Label>
                <TextBox Background="AliceBlue" Foreground="Black"></TextBox>
                <Label Content="PASSWORD" Foreground="White"></Label>
                <TextBox  Background="AliceBlue" Foreground="Black"></TextBox>
                <Button  Content="SUBMIT" Click="Button_Click" Background="#2e3137" Foreground="White" Width="74"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
